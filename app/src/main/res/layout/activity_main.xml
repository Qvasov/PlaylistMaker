<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_header_height"
        android:paddingTop="@dimen/panel_header_padding_top"
        android:paddingStart="@dimen/common_padding"
        android:paddingBottom="@dimen/common_padding"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/header_title"
            android:textColor="@color/yp_white"
            android:textSize="@dimen/header_text_size"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/common_padding"
        android:paddingTop="24dp"
        android:paddingBottom="28dp">


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/search"
            android:textColor="@color/yp_black"

            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dimens_button_text"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/library"
            android:textColor="@color/yp_black"

            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dimens_button_text"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/settings"
            android:textColor="@color/yp_black"

            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dimens_button_text"
            app:iconTint="@color/black" />
    </LinearLayout>


</LinearLayout>