<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/panel_header_height</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="headerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_font_weight_medium</item>
    </style>
    <style name="headerButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="mainActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/common_margin_horizontal</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_font_weight_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dimens_button_text</item>
        <item name="iconTint">@color/yp_black</item>

    </style>
    
    <style name="settingsActivityLayoutElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_element_height</item>
        <item name="android:layout_marginHorizontal">@dimen/common_margin_horizontal</item>
    </style>
    <style name="settingsActivityTextElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>
    <style name="settingsActivityImageElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
    </style>
    <style name="settingsActivityTabBarLayoutElementStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="settingsActivityTabBarImageElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/activityTextColor</item>
    </style>
    <style name="settingsActivityTabBarTextElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tab_bar_text_size</item>
    </style>
</resources>